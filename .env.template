# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Frontend Port
PORT=8000

# Backend API Configuration
REACT_APP_API_URL=YOUR_API_URL_HERE
REACT_APP_WS_URL=YOUR_WEBSOCKET_URL_HERE
REACT_APP_FRONTEND_URL=YOUR_FRONTEND_URL_HERE

# Build Configuration
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=false

# Environment Type
REACT_APP_ENV=development

# Public URL for payments and redirects
PUBLIC_URL=YOUR_PUBLIC_URL_HERE

# API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_CACHE_ENABLED=true

# Performance Settings
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=1000

# Security Settings (Production only)
REACT_APP_SECURE_COOKIES=false
REACT_APP_SAMESITE_COOKIES=lax

# Example Values:
# For Local Development:
# REACT_APP_API_URL=http://localhost:5000/api
# REACT_APP_WS_URL=ws://localhost:5000
# REACT_APP_FRONTEND_URL=http://localhost:8000
# PUBLIC_URL=http://localhost:8000

# For Production:
# REACT_APP_API_URL=https://your-api-domain.com/api
# REACT_APP_WS_URL=wss://your-api-domain.com
# REACT_APP_FRONTEND_URL=https://your-frontend-domain.com
# PUBLIC_URL=https://your-frontend-domain.com
