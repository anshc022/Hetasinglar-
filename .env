# Local Development Environment Configuration
# This file is optimized for local development

# Frontend Port (React app will run on this port)
PORT=8000

# Backend API Configuration (Local Development)
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000
REACT_APP_FRONTEND_URL=http://localhost:8000

# Build Configuration
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=false

# Development Settings
REACT_APP_ENV=development

# Public URL for payments and redirects (local development)
PUBLIC_URL=http://localhost:8000

# Skip preflight checks for faster development
SKIP_PREFLIGHT_CHECK=true

# Browser settings
BROWSER=none
